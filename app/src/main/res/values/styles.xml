<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/reddish_orange</item>
        <item name="colorPrimaryDark">@color/river_bed</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="EditTextFilledSmallTransparent" parent="@style/Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/dimens_16dp</item>
        <item name="android:maxLength">2000</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:autoText">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">flagNoEnterAction</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">@dimen/dimens_txt_14sp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextRegular">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:lineSpacingExtra">@dimen/space_xs_sp</item>
    </style>

    <style name="ButtonSubmit">
        <item name="android:paddingStart">@dimen/space_hg</item>
        <item name="android:paddingEnd">@dimen/space_hg</item>
        <item name="android:paddingTop">@dimen/space_sm</item>
        <item name="android:paddingBottom">@dimen/space_sm</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TextRegular.16" parent="TextRegular">
        <item name="android:textSize">@dimen/dimens_txt_16sp</item>
    </style>

    <style name="ButtonPrimary" parent="ButtonSubmit">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
